<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello My EditText!"
        android:textColor="@color/main_hint"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1、修改显示的光标；\n2、设置输入限制。"
        android:textColor="@color/main_hint"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/main_input_phone_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请输入手机号："
            android:textColor="@color/main_input"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/main_input_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_input_phone_tips"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/main_hint"
            android:textColorHint="@color/main_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@+id/main_input_phone"
            android:layout_below="@+id/main_input_phone"
            android:background="@color/main_input" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/main_input_pass_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请输入密码："
            android:textColor="@color/main_input"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/main_input_pass"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_input_pass_tips"
            android:background="@android:color/transparent"
            android:hint="6-8位的数字或字母"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/main_hint"
            android:textColorHint="@color/main_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@+id/main_input_pass"
            android:layout_below="@+id/main_input_pass"
            android:background="@color/main_input" />

    </RelativeLayout>

</LinearLayout>
